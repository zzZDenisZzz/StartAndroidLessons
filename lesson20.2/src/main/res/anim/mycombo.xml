<?xml version="1.0" encoding="utf-8"?>
<!--трансформация одновременно увелчивает размер и делает вращение элемента.
Длительность 3 с.-->

<!--Для комбинации разных трансформаций используется тег <set></set>,
-->
<set
    xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:duration="3000"
        android:pivotX="50%"
        android:pivotY="50%">
    </rotate>
    <scale
        android:fromXScale="0.1"
        android:toXScale="1.0"
        android:fromYScale="0.1"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="3000">
    </scale>
</set>